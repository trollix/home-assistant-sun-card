{
  "compilerOptions": {
    "target": "ES6",
    "module": "esnext",
    "lib": ["es5", "es6", "dom"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "strict": false,
    "resolveJsonModule": true,
    "typeRoots": [
      "./src/types/custom", 
      "node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true  // pour utiliser require sans alert

  },
  "include": [
    ".eslintrc.js",
    "rollup.config.js",
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}